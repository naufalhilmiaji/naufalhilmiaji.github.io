---
import BaseLayout from "../../layouts/BaseLayout.astro";
import ProjectHeader from "../../components/ProjectHeader.astro";
import CodeSection from "../../components/CodeSection.astro";
import { PROJECTS } from "../../data/projects";

import ProjectCard from "../../components/ProjectCard.astro";
import ProjectModal from "../../components/ProjectModal.astro";

const featured = PROJECTS.filter((p) => p.featured);

// Optional: sort projects alphabetically (stable default)
const projects = [...PROJECTS].sort((a, b) => a.title.localeCompare(b.title));
---

<BaseLayout title="Projects">
  <ProjectHeader
    title="Projects"
    subtitle="All systems and tools developed and maintained by me"
    line="01"
    noCode
  />

  <CodeSection index={2} title="# python_based">
    <div class="project-grid">
      {featured.map((project) => <ProjectCard project={project} />)}
    </div>
  </CodeSection>

  <ProjectModal />
</BaseLayout>
