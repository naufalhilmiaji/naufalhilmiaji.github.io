---
import BaseLayout from "../layouts/BaseLayout.astro";
import CodeSection from "../components/CodeSection.astro";
import ProjectHeader from "../components/ProjectHeader.astro";

const sections = [
    { title: "# professional_summary" },
    { title: "# current_focus" },
    { title: "# experience" },
    { title: "# design_principles" },
    { title: "# availability" },
];
---

<BaseLayout title="About Me">
    <ProjectHeader
        title="About Me"
        subtitle="An introduction to my work, my mindset, and the values that guide both"
        noCode
    />

    {
        sections.map((section, i) => (
            <CodeSection index={i + 1} title={section.title} summary="expand">
                {section.title === "# professional_summary" && (
                    <>
                        <p>
                            I design and build backend systems and automation
                            tools with a strong focus on reliability, clarity,
                            and long-term maintainability.
                        </p>

                        <p>
                            My work often involves long-running services,
                            defensive error handling, and integration across
                            unreliable external systems.
                        </p>
                    </>
                )}

                {section.title === "# current_focus" && (
                    <ul>
                        <li>Backend-first automation platforms</li>
                        <li>Multi-channel messaging systems</li>
                        <li>Infrastructure monitoring & diagnostics</li>
                        <li>Failure-aware system design</li>
                    </ul>
                )}

                {section.title === "# experience" && (
                    <>
                        <div class="role">
                            <h3>IT Developer</h3>
                            <p class="meta">
                                PT PGAS Telekomunikasi Nusantara · Aug 2022 —
                                Present
                            </p>

                            <details open>
                                <summary>Show responsibilities</summary>
                                <ul>
                                    <li>
                                        Designed and developed backend systems
                                        and internal applications using
                                        object-oriented programming and
                                        relational databases.
                                    </li>
                                    <li>
                                        Built chatbot automation for routine
                                        reporting and data analysis, focusing on
                                        time accuracy and system reliability.
                                    </li>
                                    <li>
                                        Redesigned and extended existing
                                        applications to meet evolving
                                        operational and user requirements.
                                    </li>
                                </ul>
                            </details>
                        </div>

                        <div class="role">
                            <h3>Backend Developer</h3>
                            <p class="meta">
                                PT Stampindo Lancar Jaya · Mar 2022 — May 2022
                            </p>

                            <details open>
                                <summary>Show responsibilities</summary>
                                <ul>
                                    <li>
                                        Contributed to backend sub-modules and
                                        API logic while optimizing performance
                                        and maintainability.
                                    </li>
                                    <li>
                                        Assisted in debugging production issues
                                        and improving deployment readiness
                                        through testing.
                                    </li>
                                </ul>
                            </details>
                        </div>

                        <div class="role">
                            <h3>Full Stack Web Developer (Intern)</h3>
                            <p class="meta">
                                PT Mitracomm Ekasarana · Jun 2020 — Aug 2020
                            </p>

                            <details open>
                                <summary>Show responsibilities</summary>
                                <ul>
                                    <li>
                                        Ensure understanding of software
                                        requirements and ensure successful
                                        delivery of projects
                                    </li>
                                    <li>
                                        Applied software development best
                                        practices such as data abstraction and
                                        analysis
                                    </li>
                                </ul>
                            </details>
                        </div>
                    </>
                )}

                {section.title === "# design_principles" && (
                    <ul>
                        <li>Explicit failure handling over silent retries</li>
                        <li>Deterministic backends over opaque automation</li>
                        <li>Observability before optimization</li>
                        <li>Simple systems that degrade gracefully</li>
                    </ul>
                )}

                {section.title === "# availability" && (
                    <p>
                        I’m open to backend, automation, and systems-oriented
                        roles where reliability and long-term system health are
                        prioritized.
                    </p>
                )}
            </CodeSection>
        ))
    }
</BaseLayout>
