---
const { date, title, subtitle, class: className = "" } = Astro.props;
---

<div class={`relative pl-8 py-6 group ${className}`}>
  <!-- Timeline vertical line -->
  <div class="absolute left-0 top-0 bottom-0 w-px bg-border-subtle group-last:h-full"></div>
  
  <!-- Accent dot -->
  <div class="absolute left-[-4.5px] top-[1.9rem] h-2.5 w-2.5 rounded-full border-2 border-bg-base bg-border-subtle group-hover:bg-accent transition-colors duration-300"></div>
  
  <div class="flex flex-col sm:flex-row sm:items-baseline gap-1 sm:gap-4 mb-2">
    <h3 class="text-text-main font-medium text-lg leading-tight">{title}</h3>
    {date && <span class="text-text-muted text-sm font-mono shrink-0">{date}</span>}
  </div>
  
  {subtitle && <div class="text-accent text-sm mb-3 font-medium">{subtitle}</div>}
  
  <div class="text-text-muted text-sm leading-relaxed max-w-[70ch]">
    <slot />
  </div>
</div>
