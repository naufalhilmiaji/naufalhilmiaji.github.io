---
import "../assets/styles/global.css";
import Breadcrumbs from "../components/Breadcrumbs.astro";
import { Sun, Moon } from "@lucide/astro";

const { title } = Astro.props;

const currentPath = Astro.url.pathname;
const isActive = (path: string) =>
  currentPath === path || currentPath.startsWith(path + "/");

const showBreadcrumbs = Astro.url.pathname !== "/";
const breadcrumbLabels = Astro.props.breadcrumbLabels || {};
---

<html lang="en">
  <head>
    <meta charset="utf-8" content="width=device-width, initial-scale=1" />
    <title>{title}</title>

    <script>
      (() => {
        try {
          const storedTheme = localStorage.getItem("theme");
          const html = document.documentElement;

          if (storedTheme === "light") {
            html.setAttribute("data-theme", "light");
          } else if (storedTheme === "dark") {
            html.setAttribute("data-theme", "dark");
          } else {
            // No stored preference → fall back to system preference
            const prefersLight = window.matchMedia(
              "(prefers-color-scheme: light)",
            ).matches;

            html.setAttribute("data-theme", prefersLight ? "light" : "dark");
          }
        } catch (_) {}
      })();
    </script>
  </head>
  <body>
    <main>
      <nav class="navbar">
        <div class="nav-left">
          <span class="brand">// naufal.dev</span>

          <a href="/" class={`nav-link ${isActive("/") ? "active" : ""}`}
            >home</a
          >
          <a
            href="/projects"
            class={`nav-link ${isActive("/projects") ? "active" : ""}`}
            >projects</a
          >
          <a
            href="/about"
            class={`nav-link ${isActive("/about") ? "active" : ""}`}>about</a
          >
        </div>

        <div class="nav-right">
          <button
            class="ui-button"
            id="theme-toggle"
            aria-label="Toggle theme"
            title="Toggle theme (T)"
          >
            <!-- Sun (shown in dark mode) -->
            <Sun id="icon-sun" size={20} />

            <!-- Moon (shown in light mode) -->
            <Moon id="icon-moon" size={20} />
          </button>
        </div>
      </nav>

      {showBreadcrumbs && <Breadcrumbs labels={breadcrumbLabels} />}
      <aside id="toc" class="toc"></aside>

      <slot />

      <footer style="margin-top:4rem; opacity:0.6;">
        © {new Date().getFullYear()} Naufal Hilmiaji
      </footer>

      <div id="command-palette" class="palette hidden">
        <div class="palette-box">
          <input
            id="palette-input"
            type="text"
            placeholder="Type a command…"
            autocomplete="off"
          />

          <ul id="palette-list">
            <li data-action="home">Go to Home</li>
            <li data-action="projects">Go to Projects</li>
            <li data-action="about">Go to About</li>
            <li data-action="theme">Toggle Theme</li>
          </ul>
        </div>
      </div>
    </main>

    <script>
      window.__PROJECTS__ = [
        { slug: "broadcastio", title: "broadcastio" },
        { slug: "directio", title: "directio" },
      ];
    </script>

    <script src="/scripts/ui.js" is:inline></script>
  </body>
</html>
