---
import "../assets/styles/global.css";
import Breadcrumbs from "../components/Breadcrumbs.astro";
const { title } = Astro.props;

const currentPath = Astro.url.pathname;
const isActive = (path: string) =>
  currentPath === path || currentPath.startsWith(path + "/");

const showBreadcrumbs = Astro.url.pathname !== "/";
const breadcrumbLabels = Astro.props.breadcrumbLabels || {};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>

    <script>
      (() => {
        try {
          const storedTheme = localStorage.getItem("theme");
          const body = document.body;

          if (storedTheme === "light") {
            body.classList.add("light");
          } else if (storedTheme === "dark") {
            body.classList.remove("light");
          } else {
            // No stored preference → fall back to system preference
            const prefersLight = window.matchMedia(
              "(prefers-color-scheme: light)",
            ).matches;

            if (prefersLight) {
              body.classList.add("light");
            }
          }
        } catch (_) {}
      })();
    </script>
  </head>
  <body>
    <main>
      <nav class="navbar">
        <div class="nav-left">
          <span class="brand">// naufal.dev</span>

          <a href="/" class={`nav-link ${isActive("/") ? "active" : ""}`}
            >home</a
          >
          <a
            href="/projects"
            class={`nav-link ${isActive("/projects") ? "active" : ""}`}
            >projects</a
          >
          <a
            href="/about"
            class={`nav-link ${isActive("/about") ? "active" : ""}`}>about</a
          >
        </div>

        <div class="nav-right">
          <button
            id="theme-toggle"
            aria-label="Toggle theme"
            title="Toggle theme (T)"
          >
            <!-- Sun (shown in dark mode) -->
            <svg
              id="icon-sun"
              viewBox="0 0 24 24"
              width="18"
              height="18"
              aria-hidden="true"
            >
              <circle cx="12" cy="12" r="5" fill="currentColor"></circle>
              <g stroke="currentColor" stroke-width="2" stroke-linecap="round">
                <line x1="12" y1="1" x2="12" y2="3"></line>
                <line x1="12" y1="21" x2="12" y2="23"></line>
                <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
                <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
                <line x1="1" y1="12" x2="3" y2="12"></line>
                <line x1="21" y1="12" x2="23" y2="12"></line>
                <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
                <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
              </g>
            </svg>

            <!-- Moon (shown in light mode) -->
            <svg
              id="icon-moon"
              viewBox="0 0 24 24"
              width="18"
              height="18"
              aria-hidden="true"
            >
              <path
                d="M21 12.79A9 9 0 1 1 11.21 3
         7 7 0 0 0 21 12.79z"
                fill="currentColor"></path>
            </svg>
          </button>
        </div>
      </nav>

      {showBreadcrumbs && <Breadcrumbs labels={breadcrumbLabels} />}
      <aside id="toc" class="toc"></aside>

      <slot />

      <footer style="margin-top:4rem; opacity:0.6;">
        © {new Date().getFullYear()} Naufal Hilmiaji
      </footer>

      <div id="command-palette" class="palette hidden">
        <div class="palette-box">
          <input
            id="palette-input"
            type="text"
            placeholder="Type a command…"
            autocomplete="off"
          />

          <ul id="palette-list">
            <li data-action="home">Go to Home</li>
            <li data-action="projects">Go to Projects</li>
            <li data-action="about">Go to About</li>
            <li data-action="theme">Toggle Theme</li>
          </ul>
        </div>
      </div>
    </main>

    <script>
      window.__PROJECTS__ = [
        { slug: "broadcastio", title: "broadcastio" },
        { slug: "directio", title: "directio" },
      ];
    </script>

    <script src="/scripts/ui.js" defer></script>
  </body>
</html>
